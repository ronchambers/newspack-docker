{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Newspack Docker",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "log": false,
        "maxConnections": 1, // @see  https://github.com/xdebug/vscode-php-debug/issues/604
        "xdebugSettings": {
          "resolved_breakpoints": "0", // @see https://github.com/xdebug/vscode-php-debug/issues/629 and https://stackoverflow.com/a/69925257/3059883
          "max_data": 512,
          "show_hidden": 1,
          "max_children": 128
        },
        "pathMappings": {
          "/newspack-repos/newspack-plugin": "${workspaceRoot}/newspack-plugin",
          "/newspack-repos/newspack-custom-content-migrator": "${workspaceRoot}/newspack-custom-content-migrator",
        },
        "skipEntryPaths": [
          // doesn't work since it's actually a php 404 in wordpress: "**/favicon.ico"
        ],
      }
    ]
  }
  